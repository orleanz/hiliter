{
  "manifest_version": 2,

  "name": "Hiliter",
  "description": "Highlights some words on webpages, using internal customizable dictionary. Usage: click red 'H' button in the top right corner to enable and configure this tool.",
  "version": "1.0",
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-2.1.3.min.js",  "content.js"]
    }
  ],

  "background": {
    "scripts": ["events.js", "background.js"],
    "persistent": false
  },


  "icons": { "16": "icon.png",
           "48": "icon48.png"
           },

  "browser_action": {
    "default_icon": "icon.png"
  }


}